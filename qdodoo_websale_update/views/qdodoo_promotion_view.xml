                        </group>
                    </group>
                    <group col="8" colspan="8">
                        <label string="促销条件：满"/>
                        <field name="all_money" nolabel="1"/>
                        <label string="赠"/>
                        <field name="subtract_money" nolabel="1"/>
                        <label string="赠品"/>
                        <field name="product_items" nolabel="1"/>
                        <label string="赠品金额"/>
                        <field name="product_items_money" nolabel="1"/>
