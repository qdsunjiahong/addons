<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_form_qdodoo_promotion" model="ir.ui.view">
            <field name="name">qdodoo.promotion.form</field>
            <field name="model">qdodoo.promotion</field>
            <field name="arch" type="xml">
                <form string="促销单">
                    <h1>
                        <label for="name" class="oe_edit_only"/>
                        <field name="name"/>
                    </h1>
                    <group>
                        <group>
                            <field name="selection_ids" required="True"/>
                            <field name="company_id"/>
                            <field name="active"/>
                            <field name="is_play"/>
                        </group>
                    </group>
                    <field name="version_id" attrs="{'invisible':[('selection_ids','!=','reduction')]}">
                        <tree>
                            <field name="name"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="active"/>
                        </tree>
                    </field>
                    <field name="version_gift_id" attrs="{'invisible':[('selection_ids','!=','gift')]}">
                        <tree>
                            <field name="name"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="active"/>
                        </tree>
                    </field>
                    <field name="version_discount_id" attrs="{'invisible':[('selection_ids','!=','discount')]}">
                        <tree>
                            <field name="name"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="active"/>
                        </tree>
                    </field>
                    <field name="version_deduction_id" attrs="{'invisible':[('selection_ids','!=','deduction')]}">
                        <tree>
                            <field name="name"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="active"/>
                        </tree>
                    </field>
                    <label string="活动详情" for="active_information"/>
                    <field name="active_information"/>
                </form>
            </field>
        </record>
        <record id="view_tree_qdodoo_promotion" model="ir.ui.view">
            <field name="name">qdodoo.promotion.tree</field>
            <field name="model">qdodoo.promotion</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <tree string="促销单">
                    <field name="name"/>
                    <field name="company_id"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        <record id="action_qdodoo_promotion" model="ir.actions.act_window">
              <field name="name">促销单</field>
              <field name="type">ir.actions.act_window</field>
              <field name="res_model">qdodoo.promotion</field>
              <field name="view_type">form</field>
              <field name="view_mode">tree,form</field>
              <field name="view_id" ref="view_tree_qdodoo_promotion" />
        </record>
        <menuitem id="menu_qdodoo_promotion" name="促销单"
            parent="base.menu_base_config" action="action_qdodoo_promotion" sequence="71"/>

