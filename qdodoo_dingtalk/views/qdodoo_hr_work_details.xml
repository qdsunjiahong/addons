<?xml version='1.0' encoding='utf-8'?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_form_qdodoo_hr_work_detail">
            <field name="name">工作日志</field>
            <field name="model">qdodoo.work.details</field>
            <field name="arch" type="xml">
                <form string="工作日志">
                    <sheet>
                        <div class="oe_title">
                            <div class="oe_edit_only">
                                <label for="category_id"/>
                            </div>
                            <h1>
                                <field name="category_id"/>
                            </h1>
                            <div class="oe_edit_only">
                                <label for="partner_ids"/>
                            </div>
                            <h2>
                                <field name="partner_ids" widget="many2many_tags" class="oe_inline"/>
                            </h2>
                        </div>
                        <notebook>
                            <page string="日志详情">
                                <group>
                                    <group>
                                        <field name="c_date" readonly="1"/>
                                        <field name="user_id" invisible="1"/>
                                        <!--<field name="end_date"/>-->
                                        <!--<field name="is_day"/>-->
                                    </group>
                                </group>
                                <label for="text"/>
                                <field name="text"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="view_tree_qdodoo_hr_work_detail">
            <field name="name">工作日志</field>
            <field name="model">qdodoo.work.details</field>
            <field name="arch" type="xml">
                <tree string="工作日志">
                    <field name="category_id"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="view_calendar_qdodoo_hr_work_detail">
            <field name="name">工作日志</field>
            <field name="model">qdodoo.work.details</field>
            <field name="arch" type="xml">
                <calendar string="日志" date_start="c_date" color="user_id">
                    <field name="category_id"/>
                    <field name="text"/>
                    <field name="user_id"/>
                </calendar>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_qdodoo_hr_work_detail">
            <field name="name">工作日志</field>
            <field name="res_model">qdodoo.work.details</field>
            <field name="view_type">form</field>
            <field name="view_mode">calendar,tree,form</field>
            <field name="view_id" ref="view_calendar_qdodoo_hr_work_detail"/>
        </record>
        <menuitem name="工作日志" id="menu_qodoo_hr_work_detail" parent="hr.menu_hr_main"
                  action="action_qdodoo_hr_work_detail"/>

                <record model="ir.ui.view" id="view_form_qdodoo_hr_work_detail2">
            <field name="name">日志类型</field>
            <field name="model">qdodoo.detail.category</field>
            <field name="arch" type="xml">
                <form string="日志类型">
                    <sheet>
                        <group colspan="4" col="4">
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="view_tree_qdodoo_hr_work_detail2">
            <field name="name">日志类型</field>
            <field name="model">qdodoo.detail.category</field>
            <field name="arch" type="xml">
                <tree string="日志类型">
                    <field name="name"/>
                    <field name="user_id" string="创建人"/>
                </tree>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_qdodoo_hr_work_detail2">
            <field name="name">日志类型</field>
            <field name="res_model">qdodoo.detail.category</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_tree_qdodoo_hr_work_detail2"/>
        </record>
        <menuitem name="日志类型" id="menu_qodoo_hr_work_detail2" parent="hr.menu_hr_main"
                  action="action_qdodoo_hr_work_detail2"/>
    </data>
</openerp>